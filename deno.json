{
  "name": "@inro/lang-traindown",
  "version": "1.2.0",
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "lib": ["dom", "es2023"]
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write npm:@lezer/generator@1.7.0 ./traindown.grammar -o ./parser.js"
  },
  "fmt": {
    "proseWrap": "never",
    "singleQuote": true,
    "semiColons": false,
    "exclude": ["./parser.js", "parser.terms.js"]
  },
  "imports": {
    "@lezer/lr": "npm:@lezer/lr",
    "@lezer/highlight": "npm:@lezer/highlight"
  },
  "exports": {
    ".": "./traindown.ts"
  }
}
